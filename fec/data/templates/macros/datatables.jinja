{% macro candidates(data) %}
  {% for datum in data %}
  <tr>
    <td><a href="/data/candidate/{{ datum.candidate_id }}">{{ datum.name }}</a></td>
    <td>{{ datum.office }}</td>
    <td>{{ datum.election_years|join(', ') }}</td>
    <td>{{ datum.party_full }}</td>
    <td>{{ datum.state }}</td>
    <td>{{ datum.district }}</td>
  </tr>
  {% endfor %}
{% endmacro %}

{% macro committees(data) %}
  {% for datum in data %}
  <tr>
    <td><a href="/data/candidate/{{ datum.committee_id }}">{{ datum.name }}</a></td>
    <td>{{ datum.treasurer_name }}</td>
    <td>{{ datum.committee_type_full }}</td>
    <td>{{ datum.designation_full }}</td>
  </tr>
  {% endfor %}
{% endmacro %}
